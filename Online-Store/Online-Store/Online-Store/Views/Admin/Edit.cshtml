@model KeyValuePair<int, ViewProduct>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Product</title>
    <link rel="stylesheet" href="~/css/edit.css">
</head>
<body>
    <h1>Edit Product</h1>

    <form method="post" action="@Url.Action("Edit", "Admin")">
        <div>
            <label for="productName">Name:</label>
            <input type="text" id="productName" name="name" value="@Model.Value.Name" required />
        </div>

        <div>
            <label for="productDescription">Description:</label>
            <input type="text" id="productDescription" name="description" value="@Model.Value.Description" required />
        </div>

        <div>
            <label for="productPrice">Price:</label>
            <input type="number" id="productPrice" name="price" value="@Model.Value.Price" step="0.01" required />
        </div>

        <div>
            <label for="productQuantity">In the stock:</label>
            <input type="number" id="productQuantity" name="quantity" value="@Model.Value.Quantity.ToString("0.##", System.Globalization.CultureInfo.InvariantCulture)" step="1" min="0" required />
        </div>
        

        <input type="hidden" name="id" value="@Model.Key" />

        <button type="submit">Modify Product</button>
    </form>
    <form method="post" action="@Url.Action("Index", "Admin")">
        <button type="submit">Discard changes</button>
    </form>
</body>
</html>


