@model List<ViewProduct>

@{
    ViewData["Title"] = "Online Store - Anonymous User";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Store - Anonymous User</title>
    <link rel="stylesheet" href="~/css/anon.css?v=1.0">
</head>
<body>
    <div class="top-buttons">
        <button onclick="window.location.href='/account/signup'">Sign Up</button>
        <button onclick="window.location.href='/account/signin'">Sign In</button>
    </div>
    <h1>Online Store - Anonymous User</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <label for="search">Search:</label>
    <input type="text" id="search" placeholder="Search for products" />
    <button onclick="searchProducts()">Search</button>

    <button class="button" onclick="window.location.href='@Url.Action("Index", "Anon")'">Browse Store</button>

    <div id="results">
        @foreach (var product in Model)
        {
            <div class="product">
                <h3>@product.Name</h3>
                <p>@product.Description</p>
                <p>Price: $@product.Price</p>
                <form asp-controller="Anon" asp-action="AddToCart" method="post">
                    <input type="hidden" name="productName" value="@product.Name" />
                    <input type="hidden" name="productPrice" value="@product.Price" />
                </form>
            </div>
        }
        @if (Model.Count == 0)
        {
            <p>No products available.</p>
        }
    </div>
</body>
</html>

<script>
    function searchProducts() {
        var query = document.getElementById('search').value;
        window.location.href = '/Anon/Search?query=' + query;
    }
</script>
