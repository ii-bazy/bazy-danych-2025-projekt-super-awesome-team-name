@model ViewAccount
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Store - Sign In</title>
    <link rel="stylesheet" href="~/css/sign-in.css?v=1.3">
</head>
<body>
    <h1>Online Store - Sign In</h1>

    <div class="sign-in-form">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="my-alert">@ViewBag.ErrorMessage</div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="my-alert my-alert-success">@TempData["SuccessMessage"]</div>
        }


        <form asp-action="SignIn" asp-controller="Account" method="post" class="log-form">
            <label for="username">Username:</label>
            <input type="text" id="username" name="Username" value="@Model.Username" placeholder="Username" required>
            <label for="password">Password:</label>
            <input type="password" id="password" name="Password" placeholder="Password" required>
            <button type="submit">Sign In</button>
        </form>
    </div>
</body>
</html>

