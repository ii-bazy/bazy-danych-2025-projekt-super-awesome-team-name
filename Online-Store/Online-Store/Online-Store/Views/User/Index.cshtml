@model ViewProductsWithNotificationFlag

@{
    ViewData["Title"] = "Online Store - Logged-in User";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Store - Logged-in Use</title>
    <link rel="stylesheet" href="~/css/user.css">
</head>
<body>
    <div class="top-buttons">
        <form asp-action="Notifications" asp-controller="User" method="post">
            <button class="@("notification__button" + (Model.HasUnreadNotification ? " --unread" : " "))" type="submit">Notifications</button>
        </form>
        <form asp-action="SignOut" asp-controller="Account" method="post">
            <button type="submit">Sign Out</button>
        </form>
    </div>
    <h1>Online Store - Logged-in User</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="controls"> 
        <label for="search">Search:</label>
        <input type="text" id="search" placeholder="Search for products" />
        <button onclick="searchProducts()">Search</button>

        <button class="button" onclick="window.location.href='@Url.Action("Index", "User")'">Browse Store</button>
        <button class="button" onclick="window.location.href='@Url.Action("Index", "Cart")'">Your Cart</button>
    </div>

    <div id="results">
        @foreach (var product in Model.Pairs)
        {
            <div class="product">
                <h3>@product.Value.Name</h3>
                <p>@product.Value.Description</p>
                <p>Price: $@product.Value.Price</p>
                <p>Left in the stock: @product.Value.Quantity</p>
                <form asp-controller="User" asp-action="AddToCart" method="post">
                    <input type="hidden" name="productId" value="@product.Key" />
                    <button type="submit" class="button">Add to Cart</button>
                </form>
            </div>
        }
        @if (Model.Pairs.Count() == 0)
        {
            <p>No products available.</p>
        }
    </div>
</body>
</html>

<script>
    function searchProducts() {
        var query = document.getElementById('search').value;
        window.location.href = '/User/Search?query=' + query;
    }
</script>

